{{#each this}}

  <div class='col js-card'>

    <div class='card-header'>
      <div class='d-flex justify-content-between align-items-center'>
        {{id}}
        <div class='form-check'>
          <label class='form-check-label w-100' for='defaultCheck1' data-completed={{completed}}>
            {{#if completed}}
              <input class='form-check-input' type='checkbox' value='' id='defaultCheck1' checked />
            {{else}}
              <input class='form-check-input' type='checkbox' value='' id='defaultCheck1' />
            {{/if}}
          </label>
        </div>

      </div>
    </div>
    {{#if completed}}
      <div class='shadow-sm rounded p-3 bg-light border border-light'>
        <div class='p-2'>
          <p class='h6 m-0 text-primary'>{{title}}</p>
        </div>
      </div>
    {{else}}
      <div class='shadow-sm rounded p-3'>
        <div class='p-2'>
          <p class='h6 m-0'>{{title}}</p>
        </div>
      </div>
    {{/if}}

  </div>

{{/each}}
